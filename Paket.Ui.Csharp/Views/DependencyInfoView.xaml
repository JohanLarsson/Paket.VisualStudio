<UserControl x:Class="Paket.Ui.Csharp.DependencyInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paket.Ui.Csharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <GroupBox DataContext="{Binding Path=(local:State.SelectedDependency)}" Header="Package Info">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Image Height="12"
                       Margin="2"
                       Source="{Binding .,
                                        Converter={local:DependencyToImageConverter WhenPackage='pack://application:,,,/Paket.Ui.Csharp;component/Images/NuGetIcon.png',
                                                                                    WhenRemoteFile='pack://application:,,,/Paket.Ui.Csharp;component/Images/OctocatIcon.png'}}" />

                <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                <TextBlock Margin="2,0,0,0" Text="{Binding Version}" />
            </StackPanel>
            <TextBlock Text="DEPENDENCIES_PLACEHOLDER" />
        </StackPanel>
    </GroupBox>
</UserControl>
