<UserControl x:Class="Paket.Ui.Csharp.ProjectInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paket.Ui.Csharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{Binding Path=(local:State.Projects)[0]}"
             mc:Ignorable="d">
    <GroupBox DataContext="{Binding Path=(local:State.SelectedProject)}" Header="Project Info">
        <ScrollViewer>
            <StackPanel>
                <TextBlock HorizontalAlignment="Left" Text="{Binding Name}" />
                <ItemsControl local:ProjectDependencies.ForProject="{Binding}" 
                              ItemsSource="{Binding Path=(local:ProjectDependencies.Dependencies), RelativeSource={RelativeSource Self}}" />
            </StackPanel>
        </ScrollViewer>
    </GroupBox>
</UserControl>
