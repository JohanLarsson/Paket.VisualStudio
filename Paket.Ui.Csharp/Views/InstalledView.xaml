<UserControl x:Class="Paket.Ui.Csharp.InstalledView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Paket.Ui.Csharp">
    <UserControl.DataContext>
        <local:InstalledViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TabControl>
            <TabItem Header="All packages">
                <local:PackageListView Packages="{Binding Packages}" SelectedPackage="{Binding SelectedDependency}" />
            </TabItem>

            <TabItem Header="Groups">
                <ListBox ItemsSource="{Binding Groups}">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:GroupInfo}">
                            <Expander Header="{Binding Name}" IsExpanded="True">
                                <local:PackageListView Packages="{Binding Packages}" SelectedPackage="{Binding DataContext.SelectedDependency, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:InstalledView}}}" />
                            </Expander>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>

        <GridSplitter Grid.Column="1" />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="3" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <GroupBox Header="Projecs">
                <TextBlock Text="PLACEHOLDER" />
            </GroupBox>

            <GridSplitter Grid.Row="1" />

            <GroupBox Grid.Row="2" Header="Info">
                <TextBlock Text="PLACEHOLDER" />
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
