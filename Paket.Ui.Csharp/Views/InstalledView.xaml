<UserControl x:Class="Paket.Ui.Csharp.InstalledView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paket.Ui.Csharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{x:Static local:InstalledViewModel.Default}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <local:PackageListView Packages="{Binding Packages}" SelectedPackage="{Binding SelectedPackage}" />

        <GridSplitter Grid.Column="1" />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="3" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <GroupBox Header="Projecs">
                <TextBlock Text="PLACEHOLDER" />
            </GroupBox>

            <GridSplitter Grid.Row="1" />

            <GroupBox Grid.Row="2" Header="Info">
                <TextBlock Text="PLACEHOLDER" />
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
