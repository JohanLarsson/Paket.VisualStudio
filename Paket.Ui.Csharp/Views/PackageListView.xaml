<UserControl x:Class="Paket.Ui.Csharp.PackageListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paket.Ui.Csharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <UserControl.Resources />

    <ListBox ItemsSource="{Binding Packages, RelativeSource={RelativeSource AncestorType={x:Type local:PackageListView}}}" SelectedItem="{Binding SelectedPackage, RelativeSource={RelativeSource AncestorType={x:Type local:PackageListView}}}" />
</UserControl>
