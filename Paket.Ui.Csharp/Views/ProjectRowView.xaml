<UserControl x:Class="Paket.Ui.Csharp.ProjectRowView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paket.Ui.Csharp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:paket="clr-namespace:Paket;assembly=Paket.Core"
             d:DataContext="{d:DesignInstance paket:ProjectFile}"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <CheckBox Grid.Column="0" Visibility="{Binding Path=(local:State.SelectedPackage), Converter={local:NullToVisibilityConverter WhenNull=Hidden, WhenNot=Visible}}" />
        <TextBlock Grid.Column="1"
                   HorizontalAlignment="Left"
                   Text="{Binding Name}" />
    </Grid>
</UserControl>
